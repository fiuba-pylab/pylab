lista_numeros = [input("ingrese la lista de n√∫meros:")]

""" Se utiliza la funcion len() para obtener el tamanio de la lista """
tamanio = len(lista_numeros)
sum = 0

""" Se recorre la lista para sumar sus valores """
for element in lista_numeros:
    element_number = int(element)
    sum += element_number
promedio = sum/tamanio

cantidad_menores = 0
for element in lista_numeros:
    if element < promedio:
        cantidad_menores += 1

print(f'promedio : {promedio}')
print(f'tamanio : {tamanio}')
print(f'cantidad numeros menores : {cantidad_menores}')
