from math import sqrt

p1 = (input("Seleccione el primer punto:"))
p2 = (input("Seleccione el segundo punto:"))

x1 = p1[0]
y1 = p1[1]

x2 = p2[0]
y2 = p2[1]

diferencia_x = x2 - x1
diferencia_y = y2 - y1

suma_cuadrados = (diferencia_x) ** 2 + (diferencia_y) ** 2

distancia = sqrt(suma_cuadrados)

m = diferencia_y/diferencia_x
b = y1 - m * x1

print(f'La distancia es {distancia}')
print(f'La pendiente es {m}')
print(f'La ordenada al origen es {b}')
